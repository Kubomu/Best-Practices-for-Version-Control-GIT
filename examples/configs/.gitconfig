# Example .gitconfig
# Copy sections to your ~/.gitconfig or project's .git/config

[user]
    name = Your Name
    email = your.email@example.com

[core]
    editor = vim
    autocrlf = input  # input on Mac/Linux, true on Windows
    excludesfile = ~/.gitignore_global

[init]
    defaultBranch = main

[color]
    ui = auto

[alias]
    # Status & Info
    st = status
    s = status --short

    # Branching
    br = branch
    co = checkout
    cob = checkout -b

    # Committing
    ci = commit
    cm = commit -m
    ca = commit --amend
    cane = commit --amend --no-edit

    # Logging
    l = log --oneline
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    last = log -1 HEAD
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

    # Diffing
    d = diff
    dc = diff --cached
    ds = diff --stat

    # Stashing
    ss = stash save
    sl = stash list
    sp = stash pop
    sa = stash apply

    # Syncing
    pl = pull
    ps = push
    psu = push -u origin HEAD

    # Undoing
    undo = reset --soft HEAD~1
    unstage = reset HEAD --
    discard = checkout --

    # Utilities
    aliases = config --get-regexp alias
    contributors = shortlog --summary --numbered
    recent = branch --sort=-committerdate
    amend = commit --amend --no-edit

[push]
    default = current
    autoSetupRemote = true

[pull]
    rebase = false

[merge]
    tool = vimdiff
    conflictstyle = diff3

[diff]
    tool = vimdiff

[fetch]
    prune = true

[rebase]
    autoStash = true

[credential]
    helper = cache --timeout=3600
